---
version: "3.7"

services:
  haproxy:
    image: "{{ $.HAPROXY_IMAGE }}"

    environment:
      - EASYHAPROXY_DISCOVER=docker
      - EASYHAPROXY_LABEL_PREFIX=haproxy
      - EASYHAPROXY_LOG_LEVEL={{ $.HAPROXY_LOG_LEVEL }}

    network_mode: bridge

    ports:
      - "80:80"

    restart: unless-stopped

    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock:ro"
